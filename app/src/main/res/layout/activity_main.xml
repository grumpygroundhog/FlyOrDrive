<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPostalAddress"
        android:ems="10"
        android:id="@+id/startLoc"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:hint="@string/start_location" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPostalAddress"
        android:ems="10"
        android:id="@+id/endLoc"
        android:layout_below="@+id/startLoc"
        android:layout_alignStart="@+id/startLoc"
        android:hint="@string/end_location" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/carMake"
        android:hint="@string/car_make"
        android:layout_below="@+id/endLoc"
        android:layout_alignEnd="@+id/endLoc"
        android:layout_alignStart="@+id/endLoc" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/carModel"
        android:layout_below="@+id/carMake"
        android:hint="@string/car_model"
        android:layout_alignEnd="@+id/carMake"
        android:layout_alignStart="@+id/carMake" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/carYear"
        android:layout_below="@+id/carModel"
        android:layout_alignStart="@+id/carModel"
        android:hint="@string/car_year"
        android:layout_alignEnd="@+id/carModel" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/go_button"
        android:id="@+id/goButton"
        android:layout_below="@+id/carYear"
        android:layout_alignStart="@+id/carYear"
        android:layout_alignEnd="@+id/carYear"
        android:background="#ff0ee324" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/spinner"
        android:layout_below="@+id/goButton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="84dp"
        android:layoutMode="opticalBounds" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/makeSpinner"
        android:layoutMode="opticalBounds"
        android:layout_below="@+id/spinner"
        android:layout_alignStart="@+id/goButton" />
</RelativeLayout>
