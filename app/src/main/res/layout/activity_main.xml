<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPostalAddress"
        android:ems="10"
        android:id="@+id/startLoc"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:hint="Start Location" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPostalAddress"
        android:ems="10"
        android:id="@+id/endLoc"
        android:layout_below="@+id/startLoc"
        android:layout_alignStart="@+id/startLoc"
        android:hint="End Location" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/carMake"
        android:hint="Make of Car"
        android:layout_below="@+id/endLoc"
        android:layout_alignEnd="@+id/endLoc"
        android:layout_alignStart="@+id/endLoc" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/carModel"
        android:layout_below="@+id/carMake"
        android:hint="Model of Car"
        android:layout_alignEnd="@+id/carMake"
        android:layout_alignStart="@+id/carMake" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/carYear"
        android:layout_below="@+id/carModel"
        android:layout_alignStart="@+id/carModel"
        android:hint="Year of Car"
        android:layout_alignEnd="@+id/carModel" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Go!"
        android:id="@+id/goButton"
        android:layout_below="@+id/carYear"
        android:layout_alignStart="@+id/carYear"
        android:layout_alignEnd="@+id/carYear"
        android:background="#ff0ee324" />
</RelativeLayout>
